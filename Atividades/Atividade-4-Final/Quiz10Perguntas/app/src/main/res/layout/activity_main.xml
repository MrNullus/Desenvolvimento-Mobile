            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="271dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_container_edt"
            android:capitalize="sentences"
            android:ems="10"
            android:hint="@string/str.hint.edt_nome"
            android:inputType="textPersonName"
            android:paddingStart="13dp"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellow"
            app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="@string/str.bem_vindo"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="@string/str.btn_iniciar"
        android:textColor="@color/dark"
        app:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNome" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
