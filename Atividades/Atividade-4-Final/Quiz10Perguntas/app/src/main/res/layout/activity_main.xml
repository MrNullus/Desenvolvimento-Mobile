<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="-16dp">

            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="271dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="@string/str.btn_iniciar"
                android:textColor="@color/dark"
                app:backgroundTint="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtNome" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="69dp"
                android:layout_height="72dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/str.instrucao_1"
                android:textColor="@color/gray_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="271dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_container_edt"
                android:capitalize="sentences"
                android:ems="10"
                android:hint="@string/str.hint.edt_nome"
                android:inputType="textPersonName"
                android:paddingStart="13dp"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow"
                app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="@string/str.bem_vindo"
                android:textColor="@color/dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="416dp"
                android:layout_height="212dp"
                android:layout_marginTop="232dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtNome"
                app:srcCompat="@drawable/shape_container_main" />

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="244dp"
                android:layout_height="234dp"
                android:layout_marginTop="16dp"
                android:rotation="0"
                android:rotationX="-2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciar"
                app:srcCompat="@drawable/pensador" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/str.btn_iniciar"
            android:textColor="@color/dark"
            app:backgroundTint="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNome" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="69dp"
            android:layout_height="72dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
